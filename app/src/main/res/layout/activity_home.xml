<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/cardview_default_radius"
        >


        <Button
            android:textSize="26dp"
            android:id="@+id/UserButton"
            android:text="User Name"
            android:gravity="left|center"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/HomeToSettings"
            android:text="Settings"
            android:gravity="left|center"
            android:drawableLeft="@drawable/ic_baseline_settings_24"
            >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/HomeToRecipes"
            android:text="Recipes"
            android:gravity="left|center"
            android:drawableLeft="@drawable/ic_baseline_food_bank_24"
            >
        </Button>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/HomeToActivity"
            android:text="Activity"
            android:gravity="left|center"
            android:drawableLeft="@drawable/ic_baseline_directions_run_24"
            >
        </Button>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/HomeToSearch"
            android:text="Search user"
            android:gravity="left|center"
            android:drawableLeft="@drawable/ic_baseline_person_search_24"
            >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/HomeToTimeline"
            android:text="My timeline"
            android:gravity="left|center"
            android:drawableLeft="@drawable/ic_baseline_timeline_24"
            >
        </Button>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:textSize="10sp"
            android:layout_weight="1"
            android:id="@+id/homeMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_home_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Home" />
        <Button
            android:textSize="10sp"
            android:layout_weight="1"
            android:id="@+id/recipesMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:drawableTop="@drawable/ic_baseline_food_bank_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Recipes" />

        <Button
            android:textSize="10sp"
            android:layout_weight="1"
            android:id="@+id/activityMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:drawableTop="@drawable/ic_baseline_directions_run_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Activity" />

        <Button
            android:textSize="10sp"
            android:layout_weight="1"
            android:id="@+id/searchMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:drawableTop="@drawable/ic_baseline_person_search_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Search" />

        <Button
            android:textSize="10sp"
            android:layout_weight="1"
            android:id="@+id/timelineMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:drawableTop="@drawable/ic_baseline_timeline_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Timeline" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>