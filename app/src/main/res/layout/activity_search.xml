<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_default_radius"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/editTextSearchUser"
                    android:hint="Search user"
                    android:layout_weight="1">

                </EditText>

                <Button
                    android:id="@+id/searchNameButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_baseline_search_24"
                    android:layout_weight="6">

                </Button>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/searchLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/cardview_compat_inset_shadow">

            </LinearLayout>




        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/ShomeMenu"
            android:textSize="10sp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_home_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Home" />
        <Button
            android:textSize="10sp"
            android:layout_weight="1"
            android:id="@+id/SrecipesMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:drawableTop="@drawable/ic_baseline_food_bank_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Recipes" />

        <Button
            android:textSize="10sp"
            android:layout_weight="1"
            android:id="@+id/SactivityMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:drawableTop="@drawable/ic_baseline_directions_run_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Activity" />

        <Button
            android:textSize="10sp"
            android:layout_weight="1"
            android:id="@+id/SsearchMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:drawableTop="@drawable/ic_baseline_person_search_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Search" />

        <Button
            android:textSize="10sp"
            android:layout_weight="1"
            android:id="@+id/StimelineMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:drawableTop="@drawable/ic_baseline_timeline_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Timeline" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>