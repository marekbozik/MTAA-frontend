<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Timeline">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/timelineLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_margin="@dimen/cardview_default_radius"
                    android:layout_weight="5"
                    android:id="@+id/TimePicker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Button>

                <Button
                    android:layout_weight="3"
                    android:layout_margin="@dimen/cardview_default_radius"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Button>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/timelineProgressBar"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">


            </ProgressBar>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/ThomeMenu"
            android:textSize="10sp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_home_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Home" />
        <Button
            android:textSize="10sp"
            android:layout_weight="1"
            android:id="@+id/TrecipesMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:drawableTop="@drawable/ic_baseline_food_bank_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Recipes" />

        <Button
            android:textSize="10sp"
            android:layout_weight="1"
            android:id="@+id/TactivityMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:drawableTop="@drawable/ic_baseline_directions_run_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Activity" />

        <Button
            android:textSize="10sp"
            android:layout_weight="1"
            android:id="@+id/TsearchMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:drawableTop="@drawable/ic_baseline_person_search_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Search" />

        <Button
            android:textSize="10sp"
            android:layout_weight="1"
            android:id="@+id/TtimelineMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:drawableTop="@drawable/ic_baseline_timeline_24"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="Timeline" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>