<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coaching">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Coaching">
        <activity
            android:name=".ChangeName"
            android:exported="false" />
        <activity
            android:name=".ChangePasswd"
            android:exported="false" />
        <activity
            android:name="com.shivam.androidwebrtc.app_rtc_sample.main.AppRTCMainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.shivam.androidwebrtc.app_rtc_sample.call.CallActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="fullUser"
            android:theme="@style/AppTheme.Call" />
        <activity
            android:name=".LauncherActivity"
            android:label="@string/title_activity_launch"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities"
            android:exported="false"
            android:label="Activities" />
        <activity
            android:name=".Settings"
            android:exported="false"
            android:label="Settings" />
        <activity
            android:name=".Timeline"
            android:exported="false"
            android:label="Timeline" />
        <activity
            android:name=".Search"
            android:exported="false"
            android:label="Search" />
        <activity
            android:name=".Register"
            android:exported="false" />
        <activity
            android:name=".AddRecord"
            android:exported="false"
            android:label="Add record" />
        <activity
            android:name=".ShowRecipe"
            android:exported="false"
            android:label="Recipes" />
        <activity
            android:name=".Home"
            android:exported="false"
            android:label="Home" />
        <activity
            android:name=".Login"
            android:exported="false" />
        <activity
            android:name=".Recipes"
            android:exported="false"
            android:label="Recipes" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tutorial.CompleteActivity"
            android:label="@string/title_activity_complete"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>